# Production Environment Configuration
# Copy this file to .env.production and update with your actual values

# Application Configuration
FLASK_ENV=production
APP_VERSION=1.0.0

# Security Keys (CHANGE THESE IN PRODUCTION!)
SECRET_KEY=your-super-secure-secret-key-change-this-immediately
JWT_SECRET_KEY=your-jwt-secret-key-change-this-immediately
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# Database Configuration
DATABASE_URL=postgresql://prototype_user:secure_password_change_in_production@postgres:5432/prototype
DB_POOL_SIZE=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_MAX_OVERFLOW=30

# Redis Configuration
REDIS_URL=redis://:secure_redis_password@redis:6379/0
REDIS_PASSWORD=secure_redis_password

# Celery Configuration
CELERY_BROKER_URL=redis://:secure_redis_password@redis:6379/0
CELERY_RESULT_BACKEND=redis://:secure_redis_password@redis:6379/0

# PostgreSQL Configuration
POSTGRES_DB=prototype
POSTGRES_USER=prototype_user
POSTGRES_PASSWORD=secure_password_change_in_production

# OpenAI Configuration
OPENAI_API_KEY=sk-your-new-openai-api-key-here

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com

# CORS Configuration
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Monitoring and Logging
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id

# Gunicorn Configuration
GUNICORN_BIND=0.0.0.0:5000
GUNICORN_WORKERS=4
GUNICORN_WORKER_CLASS=sync
GUNICORN_TIMEOUT=30
GUNICORN_MAX_REQUESTS=1000
GUNICORN_LOG_LEVEL=info

# File Upload Configuration
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# Rate Limiting
RATELIMIT_DEFAULT=200 per day; 50 per hour
RATELIMIT_STORAGE_URL=redis://:secure_redis_password@redis:6379/0

# SSL Configuration (if using self-signed certificates)
GUNICORN_KEYFILE=/app/ssl/key.pem
GUNICORN_CERTFILE=/app/ssl/cert.pem 